<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--    1. aPod-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/heading_text_style"
        android:text="@string/heading_title_gst"
        android:paddingStart="@dimen/step_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_list_gst"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_gst"
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_zero"
        android:paddingTop="@dimen/step_normal"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>