<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Astronomy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/indigo_100</item>
        <item name="colorAccent">@color/indigo_100</item>
        <item name="android:colorAccent">@color/indigo_100</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/indigo_200</item>
    </style>
</resources>