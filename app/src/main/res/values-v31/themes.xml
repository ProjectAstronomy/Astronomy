<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashThemeStandart" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Astronomy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="android:textColor">@color/grey_800</item>
        <!-- Color background (not main)       -->
        <item name="myColorPrimaryLight">@color/blue_200</item>
        <!-- Color background in cardview      -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- rv background-->
        <item name="colorSurface">@color/grey_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. (по умолчанию также colorPrimaryDark) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
    </style>

    <!--   Земная-->
    <style name="Theme.Astronomy.Earth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/green_300</item>
        <item name="colorPrimaryVariant">@color/green_300</item>
        <item name="android:textColor">@color/grey_800</item>
        <!-- Color background (not main)       -->
        <item name="myColorPrimaryLight">@color/green_200</item>
        <!-- Color background in cardview      -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- rv background-->
        <item name="colorSurface">@color/grey_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. (по умолчанию также colorPrimaryDark) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
    </style>

    <!--   Марсианская-->
    <style name="Theme.Astronomy.Mars" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deep_orange_900</item>
        <item name="colorPrimaryDark">@color/deep_orange_300</item>
        <item name="colorPrimaryVariant">@color/deep_orange_300</item>
        <item name="android:textColor">@color/grey_800</item>
        <!-- Color background (not main)       -->
        <item name="myColorPrimaryLight">@color/deep_orange_200</item>
        <!-- Color background in cardview      -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- rv background-->
        <item name="colorSurface">@color/grey_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. (по умолчанию также colorPrimaryDark) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
    </style>

</resources>