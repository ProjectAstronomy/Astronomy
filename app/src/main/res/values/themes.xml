<resources>

    <!-- Base application theme. -->
    <style name="Theme.Astronomy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryVariantStandart</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariantStandart</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantStandart</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent" >#000000</item>
        <item name="myColorPrimaryLight">@color/colorPrimaryVariantStandart</item>
        <item name="colorSecondary">@color/teal_200</item>
        <!--   фон ресайклера-->
        <item name="colorSurface">@color/colorSurfaceStandart</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. (по умолчанию также colorPrimaryDark) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- ���� ����������� ��������� ��������-->
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
    </style>

    <style name="ChipStandart" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/ChipStandart</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RelativeLayoutStyleStandart" parent="@android:style/Widget">
        <item name="android:background">@color/RelativeLayoutStyleStandart</item>
    </style>
    <style name="cardViewStandart" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/RelativeLayoutStyleStandart</item>
        <item name="background">@color/RelativeLayoutStyleStandart</item>
    </style>
    <style name="SplashThemeStandart" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_splash</item>
    </style>

    <!--   Марсианская-->
    <style name="Theme.Astronomy.Mars" parent="Theme.MaterialComponents.DayNight.NoActionBar">
