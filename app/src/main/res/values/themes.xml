        <!-- ���� ����������� ��������� ��������-->
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryMars</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantMars</item>
        <!-- фон задний -->
        <item name="myColorPrimaryLight">@color/myColorPrimaryLightMArs</item>
        <item name="chipStyle">@style/ChipMars</item>
        <item name="cardViewStyle">@style/cardViewMars</item>
        <!--   фон ресайклера-->
        <item name="colorSurface">@color/colorSurfaceMars</item>
