<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Astronomy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/indigo_100</item>

        <item name="myColorPrimaryLight">@color/indigo_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- свои собственные созданные атрибуты-->
        <item name="android:windowBackground">?attr/myColorPrimaryLight</item>

    </style>
</resources>