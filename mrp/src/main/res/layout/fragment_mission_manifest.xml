<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mission"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collaps_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleTextColor="@color/white_text_secondary"
            app:contentScrim="?attr/colorPrimaryVariant"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rover_title"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:paddingRight="10sp"
                android:text="Focusing the eyes on Mars"
                android:textSize="25sp"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_Epic"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title="M.R.P." />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10sp"
                android:text="Название вездехода"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toTopOf="@id/status"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10sp"
                android:text="Статус миссии"
                app:layout_collapseMode="parallax"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/launch_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10sp"
                android:text="Дата запуска с Земли"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toTopOf="@+id/landing_date"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/status" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/landing_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Дата посадки на Марс"
                app:layout_constraintBottom_toTopOf="@+id/max_sol"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/launch_date" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_sol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Последний сол"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toTopOf="@+id/max_date"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/landing_date" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Последняя дата Земли"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toTopOf="@+id/total_photos"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_sol" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/total_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Количество фотографий"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toTopOf="@+id/photos"
                app:layout_constraintEnd_toStartOf="@+id/rover_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_date" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rover_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rv_mars_curiosity"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_collapseMode="parallax"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/photos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_photos" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>